---
export interface Props {
  title: string;
  description: string;
  breadcrumb?: Array<{ text: string; href?: string }>;
}

const { title, description, breadcrumb } = Astro.props;
---

<div class="flex flex-col items-start gap-4 md:flex-row md:justify-between md:gap-8">
  <div class="flex-1 space-y-4">
    {breadcrumb && breadcrumb.length > 0 && (
      <div class="flex items-center gap-2">
        {breadcrumb.map((item, index) => (
          <Fragment key={item.text}>
            {item.href ? (
              <a href={item.href} class="text-muted-foreground hover:text-foreground transition-colors">
                {item.text}
              </a>
            ) : (
              <span class="text-title-l font-bold my-0">{item.text}</span>
            )}
            {index < breadcrumb.length - 1 && (
              <span class="text-muted-foreground">/</span>
            )}
          </Fragment>
        ))}
      </div>
    )}
    <h1 class="inline-block text-display-s tracking-tight">
      {title}
    </h1>
    <p class="text-title-l text-muted-foreground">
      {description}
    </p>
  </div>
</div>
<hr class="my-8" />